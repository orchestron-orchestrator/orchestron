class Fun(ttt.RFSFunction):
    def transform_wrapper(self, cfg, device_info, memory, dynstate):
        return (gdata.Container(cfg.children), memory)

cfg3 = gdata.Container({
    "rfs": gdata.List(["name"], [
        gdata.Container({
            "name": gdata.Leaf("k1"),
            "base": gdata.List(["id"], [
                gdata.Container({
                    "id": gdata.Leaf("A"),
                    "val": gdata.Leaf("one")
                })
            ])
        }),
        gdata.Container({
            "name": gdata.Leaf("k2"),
            "base": gdata.List(["id"], [
                gdata.Container({
                    "id": gdata.Leaf("A"),
                    "val": gdata.Leaf("two")
                })
            ])
        })
    ])
})

def rfs_for_device(dev):
    return gdata.Container({
        'rfs': gdata.List(["name"], [
            gdata.Container({
                "name": gdata.Leaf(dev)
            })
        ])
    })

actor complete(t: testing.AsyncT):
    dev_registry = odev.DeviceRegistry(log_handler=t.log_handler)
    stack = ttt.Layer("rfs", ttt.Container({"rfs": ttt.List(ttt.Container({"base": ttt.List(ttt.RFSTransform(Fun, dev_registry), ["id"])}), ["name"])}),
            ttt.Layer("devices", ttt.Container({"devices": ttt.Container({"device": ttt.List(ttt.DeviceConfig(dev_registry), ["name"])})}),
            None))

    def reconf_cb(dev):
        cfg = rfs_for_device(dev)
        stack.edit_config(cfg, force=True)
        
    dev_registry.on_reconf(reconf_cb)
    
    def cont1(_r):
        dmc1 = DeviceMetaConfig("k1", Credentials("admin", "admin"), mock=Mock(["cisco-ios-xr"]))
        dmc2 = DeviceMetaConfig("k2", Credentials("admin", "admin"), mock=Mock(["cisco-ios-xr"]))
        k1 = dev_registry.get("k1").set_dmc(dmc1)
        k2 = dev_registry.get("k2").set_dmc(dmc2)
    
    def complete_cb(_r):
        t.success()
        
    sess = stack.newsession()
    sess.edit_config(cfg3, cont1, complete_cb)


