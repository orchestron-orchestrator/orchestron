    }
    ssh_server_params = yang.gdata.Container(ssh_server_params_children)

    # ssh container
    ssh_children = {
        yang.gdata.Id("urn:ietf:params:xml:ns:yang:ietf-netconf-server", "ssh-server-parameters"): ssh_server_params
    }
    ssh_container = yang.gdata.Container(ssh_children)

    # endpoint list entry with key "default-ssh"
    endpoint_children = {
        yang.gdata.Id("urn:ietf:params:xml:ns:yang:ietf-netconf-server", "name"): yang.gdata.Leaf("default-ssh"),
        yang.gdata.Id("urn:ietf:params:xml:ns:yang:ietf-netconf-server", "ssh"): ssh_container
    }
    endpoint_entry = yang.gdata.Container(endpoint_children)

    # endpoints list - the key is "name"
    endpoints_list = yang.gdata.List([yang.gdata.Id("urn:ietf:params:xml:ns:yang:ietf-netconf-server", "name")], [endpoint_entry])

    # endpoints container
    endpoints_children = {
        yang.gdata.Id("urn:ietf:params:xml:ns:yang:ietf-netconf-server", "endpoint"): endpoints_list
    }
    endpoints = yang.gdata.Container(endpoints_children)

    # listen container
    listen_children = {
        yang.gdata.Id("urn:ietf:params:xml:ns:yang:ietf-netconf-server", "endpoints"): endpoints
    }
    listen = yang.gdata.Container(listen_children)

    # netconf-server container (top level)
    netconf_server_children = {
        yang.gdata.Id("urn:ietf:params:xml:ns:yang:ietf-netconf-server", "listen"): listen
    }
    netconf_server = yang.gdata.Container(netconf_server_children, ns="urn:ietf:params:xml:ns:yang:ietf-netconf-server")

    # Root container
