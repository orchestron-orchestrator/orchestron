actor basic_delete(t: testing.AsyncT):
    tlist = ttt.List(ttt.Transform(ttt.PassThrough), [q("name")]) ([], None)
    t1 = tlist.newtrans()

    def cont2(_r: value):
        t1.commit("1", True)
        r = t1.get()
        testing.assertEqual(r, tree1pruned)
        t.success()

    def cont1(_r: value):
        t1.commit("1", True)
