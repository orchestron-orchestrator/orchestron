# This is a test for a TTT.List top node without a transform function. When we
# read the data from TTT, we must get the same valid data back. That includes
# the key attribute and key child leafs set for the list element Container.
nested_tree = gdata.Container({
    q("top-list"): gdata.List([q("name"), q("id")], [
        gdata.Container({
            # This is the key leaf for the top-list list element, and it must remain in the output.
            q("name"): gdata.Leaf("k1"),
            q("id"): gdata.Leaf(1),
            q("nested-list"): gdata.List([q("id")], [
                gdata.Container({
                    q("id"): gdata.Leaf("k1-k1"),
                    q("a"): gdata.Leaf(1)
                })
            ])
        }),
        gdata.Container({
            q("name"): gdata.Leaf("k2"),
            q("id"): gdata.Leaf(2),
            q("nested-list"): gdata.List([q("id")], [
                gdata.Container({
                    q("id"): gdata.Leaf("k2-k1"),
                    q("a"): gdata.Leaf(2)
                })
            ])
        })
    ])
})

actor nested_list(t: testing.AsyncT):
    tlist = ttt.Container({q("top-list"): ttt.List(ttt.Container({q("nested-list"): ttt.List(ttt.Transform(ttt.PassThrough), [q("id")])}), [q("name"), q("id")])}) ([], None)
    t1 = tlist.newtrans()
    t1.configure("1", {'srcA': nested_tree}, None)

    def cont1(_r: value):
        t1.commit("1", True)
        r = t1.get()
        try:
            testing.assertEqual(nested_tree, r)
            t.success()
        except Exception as e:
            t.failure(Exception("Diff:\n{diff.diff(nested_tree.prsrc(), r.prsrc(), color=True)}"))
    t1.lock("1", None, cont1)

actor nested_list_session_get(t: testing.AsyncT):
    layer = ttt.Layer("top", ttt.Container({q("top-list"): ttt.List(ttt.Container({q("nested-list"): ttt.List(ttt.Transform(ttt.PassThrough), [q("id")])}), [q("name"), q("id")])}, None), None)
    sess = layer.newsession()

    def cont1(_r: value):
        r = sess.get()
        try:
            testing.assertEqual(nested_tree, r)
            t.success()
        except Exception as e:
            t.failure(Exception("Diff:\n{diff.diff(nested_tree.prsrc(), r.prsrc(), color=True)}"))

    sess.edit_config(nested_tree, cont1)

