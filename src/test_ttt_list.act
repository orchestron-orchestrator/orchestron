actor basic_commit(t: testing.AsyncT):
    tlist = ttt.List(ttt.Transform(ttt.PassThrough), ["name"]) ([], None)
    t1 = tlist.newtrans()

    t1.configure("1", {'srcA': tree1}, None)

    def cont1(_r: value):
        t1.commit("1", True)
        r = t1.get()
        testing.assertEqual(r, tree1)
        t.success()

    t1.lock("1", None, cont1)


