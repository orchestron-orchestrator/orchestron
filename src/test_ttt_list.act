            gdata.Container({
                "name": gdata.Leaf("str", "k1"),
                "x": gdata.Leaf("int", 1)
            }),
            gdata.Container({
                "name": gdata.Leaf("str", "k2"),
                "x": gdata.Leaf("int", 2)
            })
        ])

    inB = gdata.List(["name"], [
            gdata.Container({
